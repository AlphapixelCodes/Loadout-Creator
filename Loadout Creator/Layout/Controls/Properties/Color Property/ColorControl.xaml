<UserControl
    x:Class="Loadout_Creator.ColorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Loadout_Creator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="35"
    d:DesignWidth="150" Loaded="UserControl_Loaded">

    <StackPanel Orientation="Horizontal" Spacing="5" Margin="1">

        <Button Height="33" Width="90" Padding="0" Tag="Change" Click="Button_Click">
            <Canvas Name="canvas" Width="85" Height="28">
                <Line X2="85" Y1="28" Stroke="#7FFF0000"/>
                <Line X1="85" Y1="28" Stroke="#7FFF0000"/>
            </Canvas>
        </Button>
        <Button Width="33" Padding="0" Height="33" Click="Button_Click" Tag="Clear" ToolTipService.ToolTip="Reset">
            <SymbolIcon Symbol="Clear"/>
        </Button>
    </StackPanel>
</UserControl>
